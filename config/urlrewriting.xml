<?xml version="1.0" encoding="UTF-8"?>
<urlrewriting>
	<rules>
		<rule documentModel="comment" viewMode="detail">
			<template>/comment-$id</template>
		</rule>
		<rule redirection="comment/ViewFeed">
			<template>/comment/rss/feed,$targetId.xml</template>
			<parameters>
				<parameter name="targetId" format="[0-9]+" />
			</parameters>
		</rule>
	</rules>
</urlrewriting>